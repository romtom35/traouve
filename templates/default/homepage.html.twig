{% extends "base.html.twig" %}
{% block recherche %}
    {% include 'default/header.html.twig' %}
{% endblock %}
{% block body %}

    <div class="container">
        <h2>Les derniers objets trouvés</h2>
        <section class="row">
            {% for traobject in traobjects if traobject.state.label == 'Trouvé' %}
                <article class="col-md-3">
                    {% include 'traobject/card.html.twig' with {'traobject': traobject} only %}
                </article>
            {% endfor %}

        </section>
    </div>

    <div class="container">
        <h2>Les derniers objets perdus</h2>
        <section class="row">
            {% for traobject in traobjects if traobject.state.label == 'Perdu' %}
                <article class="col-md-3">
                    {% include 'traobject/card.html.twig' with {'traobject': traobject} only %}
                </article>
            {% endfor %}
        </section>
    </div>
{% endblock %}
