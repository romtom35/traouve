            {% for traobjectLost in traobjectLosts %}
                <tr>
                    <td>{{ traobjectLost.title }}</td>
                    <td><img class="thumbnail" src="{{ asset('uploads/' ~ traobjectLost.picture)}}" alt="{{ traobjectLost.category.label }}"></td>
