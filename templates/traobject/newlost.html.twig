{% extends 'base.html.twig' %}

{% block title %}Déposer une annonce{% endblock %}

{% block body %}
    {% if app.user %}

        <div class="container mb-4">
            <h1>Avis de recherche d'un objet perdu</h1>

            <div class="tab-content">
                <div class="tab-pane fade show active" id="found" role="tabpanel" aria-labelledby="found-tab">

                    {% include 'traobject/_form.html.twig' with {'form': form, 'state': stateLost} only %}
                </div>

            </div>
        </div>
    {% else %}
        <div class="alert alert-secondary container mb-4" role="alert">
            <p>Veuillez vous connecter afin de pouvoir déposer une annonce</p>
            <a href="{{ path('app_login') }}" class="btn btn-primary">
                <i class="fa fa-sign-in"></i>
                Me connecter
            </a>
        </div>
    {% endif %}
{% endblock %}