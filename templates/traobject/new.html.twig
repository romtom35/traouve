{% extends 'base.html.twig' %}

{% block title %}Déposer une annonce{% endblock %}

{% block body %}
    {% if app.user %}

    <div class="container mb-4">
    <h1>Déposer une annonce</h1>
        <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="found-tab" data-toggle="tab" href="#found" role="tab" aria-controls="found"
                   aria-selected="true">Objet trouvé</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="lost-tab" data-toggle="tab" href="#lost" role="tab" aria-controls="lost"
                   aria-selected="false">Objet perdu</a>
            </li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane fade show active" id="found" role="tabpanel" aria-labelledby="found-tab">
                <h2>J'ai trouvé un objet</h2>
                {% include 'traobject/_form.html.twig' with {'form': formFound, 'state': stateFound} only %}
            </div>

            <div class="tab-pane fade" id="lost" role="tabpanel" aria-labelledby="lost-tab">
                <h2>J'ai perdu un objet</h2>
                {% include 'traobject/_form.html.twig' with {'form': formLost, 'state': stateLost} only %}
            </div>
        </div>
    </div>
        {% else %}
            <div class="alert alert-secondary container mb-4" role="alert">
                <p>Veuillez vous connecter afin de pouvoir déposer une annonce</p>
                <a href="{{ path('app_login') }}" class="btn btn-primary">
                    <i class="fa fa-sign-in"></i>
                    Me connecter
                </a>
            </div>
    {% endif %}
{% endblock %}